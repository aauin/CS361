<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Account Settings</title>
    <script src="js/validation.js"></script>
    <script src="js/confirmation.js" defer></script>
</head>
<body>
    <div class="header">
        <h1>Account Settings</h1>
    </div>
    <div class="profile-avatar">
        <img src="images/avatar.png" style="width: 200px;" alt="User Avatar">
    </div>
    <br>
    <button class="change-avatar-button" onclick="redirectToUpload()">Change Avatar</button>
    <br>
    <br>
    <br>

    <div class="settings-form">
        <form>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="John Doe"><br><br>

            <label for="alias">Alias:</label>
            <input type="text" id="alias" name="alias" value="mr_darkknight"><br><br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" onkeyup="validatePassword(this.value)"><br><br>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="er@yahoo.com"><br><br>

            <label for="mode">Mode:</label>
            <select id="mode" name="mode">
                <option value="simple">Simple</option>
                <option value="standard" selected>Standard</option>
                <option value="custom">Custom</option>
            </select><br><br>

            <label for="alarm">Alarm:</label>
            <select id="alarm" name="alarm">
                <option value="off">Off</option>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="custom">Custom</option>
            </select>
        </form>
    </div>
    <br>
    <button class="reset">Reset Account</button>

    <script>
        function redirectToUpload() {
            window.location.href = '/upload';
        }
    </script>
</body>
</html>
